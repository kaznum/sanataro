#confirmation_status_body
  %table.table.table-condensed
    %tr
      %th= t('label.date')
      %th= t('.explanation')
    - @entries.each do |etr|
      %tr
        %td= l(etr.action_date, format: :short)
        %td= link_to etr.name, entries_path(etr.action_date.year, etr.action_date.month) + "#item_#{etr.id}"
