= javascript_include_tag 'settings/accounts'
= javascript_include_tag 'farbtastic'
= stylesheet_link_tag 'farbtastic'
#menu= render 'settings/config_menu'
.cfg_account_list
  #input_add= render 'add'
  #accounts
    .cfg_account
      .cfg_account_name.cfg_account_header
        = t("settings.accounts.bank_account") if @account_type == 'account'
        = t("settings.accounts.outgoing_account") if @account_type == 'outgo'
        = t("settings.accounts.income_account") if @account_type == 'income'
      .cfg_account_order.cfg_account_header= t("label.position")
      .cfg_account_operation.cfg_account_header &nbsp;
    .reset
    - @accounts.each do |account|
      = render :partial=>'show', :locals => {:account => account}
